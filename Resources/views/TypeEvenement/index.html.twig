{% extends 'AppBundle::layout.html.twig' %}

{% block title %}Type Evenement{% endblock %}

{% block content -%}
    <div class="col-sm-6 col-sm-offset-3">
        <h1 class="evenement">Types d'évènements</h1>

        <table class="records_list table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('typeevenement_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>
                        <a class="btn btn-xs btn-primary" href="{{ path('typeevenement_show', { 'id': entity.id }) }}">
                            <span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>
                        </a>
                        <a class="btn btn-xs btn-warning" href="{{ path('typeevenement_edit', { 'id': entity.id }) }}">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

            <a class="btn btn-success" href="{{ path('typeevenement_new') }}">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>   
            </a>
        </div>
    {% endblock %}
