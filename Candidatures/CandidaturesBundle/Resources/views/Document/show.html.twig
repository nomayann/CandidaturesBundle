{% extends 'AppBundle::layout.html.twig' %}

{% block title "Candidatures - Document" %}

{% block content -%}
    <div class="col-sm-6 col-sm-offset-3">
        <h1 class="document">Document</h1>

        <table class="record_properties">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Path</th>
                    <td><a href="{{ entity.webPath }}">{{ entity.path }}</a></td>
                </tr>
                <tr>
                    <th>Web Path</th>
                    <td><a href="{{ asset(entity.webPath) }}">{{ asset(entity.webPath) }}</a></td>
                </tr>
                <tr>
                    <th>Absolute&nbsp;Path</th>
                    <td>{{ entity.absolutePath }}</td>
                </tr>
            </tbody>
        </table>

            <a class="btn btn-info"  href="{{ path('document') }}">
                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
            </a>
            {% form_theme delete_form 'AppBundle:Form:my_big_delete_button.html.twig' %}
            {{ form(delete_form) }}
    </div>
{% endblock %}
