{% extends 'AppBundle::layout.html.twig' %}

{% block title %}Contact{% endblock %}

{% block content -%}
    <h1 class="contact">Contact</h1>

    <table class="record_properties table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ entity.firstName }}</td>
            </tr>
            <tr>
                <th>Function</th>
                <td>{{ entity.function }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ entity.tel }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ entity.note }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-info" href="{{ path('contact') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
    </a>
    <a class="btn btn-warning" href="{{ path('contact_edit', { 'id': entity.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    </a>
    {% form_theme delete_form 'AppBundle:Form:my_big_delete_button.html.twig' %}
    {{ form(delete_form) }}
{% endblock %}