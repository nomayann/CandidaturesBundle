{% extends 'AppBundle::layout.html.twig' %}

{% block title %}Type Candidature{% endblock %}

{% block content -%}
    <h1 class="candidature">TypeCandidature</h1>

    <table class="record_properties table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
        </tbody>
    </table>

        <a class="btn btn-info"  href="{{ path('typecandidature') }}">
            <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        </a>
        <a class="btn btn-default" href="{{ path('typecandidature_edit', { 'id': entity.id }) }}">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </a>
        {% form_theme delete_form 'AppBundle:Form:my_form.html.twig' %}

        {{ form(delete_form) }}
{% endblock %}
