{% extends 'AppBundle::layout.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets  'bundles/bmatznerjqueryui/css/smoothness/jquery-ui.css'
                    'bundles/bmatznerjqueryui/css/smoothness/jquery.ui.theme.css'
     filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %} 
    {% if not ajax %}{{ form_stylesheet(form) }}{% endif %}
{% endblock %}

{% block content -%}
    <h1 class="evenement">Evenement creation</h1>

    {% include 'CandidaturesBundle:Evenement:form_new.html.twig' with {'form' : form}  %}

        <a class="btn btn-primary" href="{{ path('evenement') }}">
            <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        </a>

{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{% javascripts 		
		'@CandidaturesBundle/Resources/public/js/evenement.js'
	%}
	<script src="{{ asset_url }}"></script>
	{% endjavascripts %}
	<script type="text/javascript" src="{{ asset('bundles/bmatznerjqueryui/js/minified/jquery-ui.min.js') }}"></script>
	{% if not ajax %}{{ form_javascript(form) }}{% endif %}
{% endblock %}