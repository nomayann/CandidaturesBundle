<tr id="evenement_{{ evenement.id }}">
    <td>
        <a class="btn btn-xs btn-warning" data-toggle="modal" data-target="#popupEvt" data-href="{{ path('evenement_edit', { 'id': evenement.id}) }}" data-title="Modifier un évènement">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </a>
    </td>
    <td>{{ evenement.date|date('d M Y') }}</td>
    <td>{{ evenement.yearweek }}</td>
    <td>{{ evenement.typeEvenement }}</td>
    <td>{{ evenement.contact }}</td>
    <td>   
        
        {{ evenement.note | truncate(30,true) }}
        {% if evenement.note|length > 30 %}
            <a href="#" data-toggle="popover" title="Note complète" data-content="{{ evenement.note }}" data-placement="top">
                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
            </a>
        {% endif %}
    </td>
    <td>
        <small>
            <ul class="list-unstyled">
            {% for document in evenement.documents %}
                <li>{% include 'CandidaturesBundle:Document:download_link.html.twig' with {'document' : document}  %}</li>
            {% endfor %}
            </ul>
        </small>
    </td>
</tr>