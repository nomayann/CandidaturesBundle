{% extends 'AppBundle::layout.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block content -%}
    <h1 class="evenement">Evenement</h1>

    <table class="record_properties table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ entity.note }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info"  href="{{ path('evenement') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
    </a>
    <a class="btn btn-default"  href="{{ path('evenement_edit', { 'id': entity.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    </a>
    {% form_theme delete_form 'AppBundle:Form:my_big_delete_button.html.twig' %}
    {{ form(delete_form) }}

{% endblock %}
