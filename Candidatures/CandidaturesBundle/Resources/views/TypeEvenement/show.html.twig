{% extends 'AppBundle::layout.html.twig' %}

{% block title %}Type Evenement{% endblock %}

{% block content -%}
    <div class="col-sm-6 col-sm-offset-3">
        <h1 class="evenement">TypeEvenement</h1>

        <table class="record_properties table table-hover">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
            </tbody>
        </table>

        <a class="btn btn-info"  href="{{ path('typeevenement') }}">
            <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        </a>
        <a class="btn btn-default" href="{{ path('typeevenement_edit', { 'id': entity.id }) }}">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </a>

        {% form_theme delete_form 'AppBundle:Form:my_big_delete_button.html.twig' %}
            
        {{ form(delete_form) }}
    </div>
{% endblock %}
